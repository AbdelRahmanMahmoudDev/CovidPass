<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".id_vacid_fragment">

    <EditText
        android:id="@+id/ID_txt"
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:hint="Enter your ID"
        android:inputType="numberPassword"
        android:textColorHighlight="@color/stepview_mark"
        android:textColorLink="@color/stepview_selected_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/VacID_txt"
        android:layout_width="324dp"
        android:layout_height="52dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Enter the 20 Vaccination Number "
        android:inputType="numberPassword"
        android:textColorHighlight="@color/stepview_mark"
        android:textColorLink="@color/stepview_selected_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID_txt"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/signup"
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:text="SignUP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VacID_txt"
        app:layout_constraintVertical_bias="0.454"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/test"
        android:layout_width="236dp"
        android:layout_height="37dp"
        android:text="you dont have vaccination ID?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VacID_txt" />

    <TextView
        android:id="@+id/click"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:text="Click here"
        android:textAlignment="center"
        android:textColor="#275ADC"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VacID_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>